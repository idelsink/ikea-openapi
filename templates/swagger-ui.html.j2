<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8" />
    <meta description='{{ metaDescription }}' />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swagger-ui-dist@5.29.0/swagger-ui.css"
    />
    <style>
      :root {
        --ikea-blue: #0057AD;
        --ikea-yellow: #FBDA0C;
      }

      body {
        margin: 0;
      }

      .nav {
        background: var(--ikea-blue);
        padding: 0;
        display: flex;
        font-family: Arial, sans-serif;
        flex-wrap: wrap; /* Allow items to wrap */
      }

      .nav a {
        color: white;
        padding: 15px 20px;
        text-decoration: none;
        flex: 1 1 auto; /* Allow items to grow and shrink */
        text-align: center;
        white-space: nowrap; /* Prevent text from wrapping within links */
      }

      .nav a:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      .nav a[data-active="true"] {
        background: rgba(255, 255, 255, 0.2);
        border-bottom: 3px solid var(--ikea-yellow);
      }

      /* Mobile styles */
      @media (max-width: 768px) {
        .nav {
          flex-direction: column; /* Stack vertically on smaller screens */
        }
      }

      /* Ensure proper display on very small screens */
      @media (max-width: 480px) {
        .nav a {
          font-size: 14px; /* Slightly smaller font on very small screens */
          padding: 10px 15px; /* Reduce padding on very small screens */
        }
      }
    </style>
  </head>
  <body>
    <div class="nav">
      {% for api in apis %}
      <a href="{{ api.url }}" data-active="{{ api.isActive|string|lower }}">
        {{ api.title }}
      </a>
      {% endfor %}
    </div>

    <div id="swagger-ui"></div>

    <script src="https://cdn.jsdelivr.net/npm/swagger-ui-dist@5.29.0/swagger-ui-bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swagger-ui-dist@5.29.0/swagger-ui-standalone-preset.js"></script>
    <script>
      window.onload = function () {
        window.ui = SwaggerUIBundle({
          // url: "./openapi.yaml",
          urls: [
            // This to disable the searchboc with files and potentially use this over custom nav bar
            {
              name: "{{ title }}",
              url: "openapi.yaml"
            },
          ],
          dom_id: "#swagger-ui",
          deepLinking: true,
          displayOperationId: true,
          presets: [
            SwaggerUIBundle.presets.apis,
            SwaggerUIStandalonePreset,
          ],
          plugins: [
            SwaggerUIBundle.plugins.DownloadUrl,
          ],
          layout: "StandaloneLayout",
          validatorUrl: null,
          tryItOutEnabled: true,
          supportedSubmitMethods: ["get", "post", "put", "delete", "patch"],
          onComplete: function () {
            // Custom initialization if needed
          },
        });
      };
    </script>
  </body>
</html>
